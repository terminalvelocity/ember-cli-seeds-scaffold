import Ember from "ember";
import config from "./config/environment";

var Router = Ember.Router.extend({
  location: config.locationType
});

Router.map(function() {
  this.route("users", function() {
    this.route("new");

    this.route("edit", {
      path: ":user_id/edit"
    });

    this.route("show", {
      path: ":user_id"
    });
  });

  this.route("foos", function() {
    this.route("new");

    this.route("edit", {
      path: ":foo_id/edit"
    });

    this.route("show", {
      path: ":foo_id"
    });
  });
});

export default Router;
